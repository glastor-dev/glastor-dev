{
  "name": "@glastor-dev/readmegen",
  "version": "2.1.0",
  "description": "Professional README Generator for Deno projects with interactive CLI and GitHub Actions integration.",
  "license": "GPL-3.0-only",
  "exports": "./src/mod.ts",
  "publish": {
    "include": [
      "LICENSE",
      "README.md",
      "deno.json",
      "src/**/*.ts",
      "src/templates/*.md"
    ]
  },
  "nodeModulesDir": "auto",
  "lint": {
    "rules": {
      "exclude": [
        "no-import-prefix",
        "no-unversioned-import",
        "no-explicit-any"
      ]
    },
    "exclude": [
      "README.generated.md",
      "README.md.bak",
      "README.md",
      "README.profile.md",
      "node_modules",
      "dist",
      "build"
    ]
  },
  "fmt": {
    "exclude": [
      "README.generated.md",
      "README.md.bak",
      "README.md",
      "README.profile.md",
      "src/templates",
      "node_modules",
      "dist",
      "build"
    ],
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "tasks": {
    "readme": "deno run -A src/main.ts --output README.md",
    "readme:force": "deno run -A src/main.ts --output README.md --force",
    "readme:check": "deno run -A src/main.ts --output README.generated.md --force",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "check": "deno check src/main.ts",
    "test": "deno test -A",
    "bench": "deno bench -A --lock=deno.lock"
  }
}
